<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Calendar.AlarmCal">

    <!-- TODO: Update blank fragment layout -->
    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/matCalendar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="120dp"
        app:headerColor="?colorSecondary"
        app:todayLabelColor="?colorTertiaryContainer"
        app:selectionColor="?colorPrimary"
        app:type="one_day_picker"
        app:eventsEnabled="true"
        />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:hint="@string/write_text"
        android:layout_below="@id/matCalendar"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputText"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        android:text="@string/save_input"
        android:textColor="#131313" />

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/outputText"
        android:layout_below="@id/button_save"
        android:layout_centerInParent="true"/>
</RelativeLayout>